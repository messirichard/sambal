{% extends layout %}
{% block title %}Contact - {% endblock %}
{% block menu %}contact{% endblock %}
{% block content %}
	<div class="outers-middle-contents  prelatife">
			<div class="outers-back-crem-hm insidepage">
				<div class="prelatife container">
					<div class="clear height-20"></div><div class="height-10"></div>

					<div class="content-text tengah text-center">
						<h1 class="title-page">CONTACT US</h1><div class="clear"></div>
						<span class="quotes">Ask us anything! We&rsquo;re ready to help</span>
						<div class="clear height-25"></div>

						<div class="mw735 text-center tengah">
							<span>Please do not hesitate to contact us:</span>
							<span><b><a href="mailto:info@sambelcapjempol.com">info@sambelcapjempol.com</a> <br>
							Call Center: +62 21.6391303</b></span>
							<span>For any enquiries, please fill out the form below to contact Sambel Cap Jempol, we will respond immediately. Thank you</span>
						</div> <div class="clear height-20"></div>
						
						<div class="contacts-form text-contact">
							{% if error|length > 0 %}
							    <div class="alert alert-error bg-danger">
							    	<button type="button" class="close" data-dismiss="alert">&times;</button>
								    <h6>Please fix the following input errors:</h6>
								    <ul>
								    	{% for dataError in error %}
								    	<li>{{ dataError }}</li>
								    	{% endfor %}
								    </ul>
							    </div>
							{% endif %}
							{% if msg == 'success' %}
							    <div class="alert alert-success">
							    	<button type="button" class="close" data-dismiss="alert">&times;</button>
								    Thank you for contacting us! we will respond to you shortly.
							    </div>
							{% endif %}

							<form method="post" action="" role="form">
							  <div class="form-group">
							    <label>Name</label>
							    <input type="text" name="Contact[name]" class="form-control" value="{{ data.name }}" >
							  </div>
							  <div class="form-group">
							    <label>Email address</label>
							    <input type="email" name="Contact[email]" class="form-control" value="{{ data.email }}" >
							  </div>

							   <div class="form-group">
							    <label>Phone</label>
							    <input type="text" name="Contact[phone]" class="form-control" value="{{ data.phone }}" >
							  </div>
							   <div class="form-group">
							    <label>Country</label>
							    <input type="text" name="Contact[country]" class="form-control" value="{{ data.country }}" >
							  </div>
							   <div class="form-group">
							    <label>Address</label>
							    <input type="text" name="Contact[address]" class="form-control" value="{{ data.address }}" >
							  </div>

							  <div class="form-group">
							    <label for="exampleInputEmail1">Message</label>
							    <textarea name="Contact[message]" class="form-control" rows="5">{{ data.message }}</textarea>
							  </div>
							  <div class="clear height-5"></div><div class="height-2"></div>
								  <div class="form-group">
								  	<div class="col-xs-12">
								  		<div class="g-recaptcha" data-sitekey="6LcqohUTAAAAAGhTVpn90m8Az3CgGkpfYQmUm4GR"></div>
								  	</div>
								  </div>
								  <div class="clear height-10"></div><div class="height-2"></div>
							  <button type="submit" class="btn btn-link btn-submit-custom">SUBMIT</button>
							</form>
							<div class="clear height-50"></div><div class="height-10"></div>
						</div>

						<div class="clear"></div>
					</div>

					<div class="clear"></div>
				</div>
				<div class="clear"></div>
			</div>

			<div class="clear"></div>
		</div>
	<script src='https://www.google.com/recaptcha/api.js'></script>
{% endblock %}